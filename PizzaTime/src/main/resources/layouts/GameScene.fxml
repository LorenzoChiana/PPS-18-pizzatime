<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Group?>
<fx:root type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../styles/MainStyle.css, @../styles/DialogStyle.css" >

    <center>
            <GridPane fx:id="root">
                <AnchorPane fx:id="gameContainer">
                        <Group fx:id="dungeon">
                        </Group>
                </AnchorPane>
                <GridPane fx:id="statsPane">
                    <VBox>
                        <Label fx:id="lifeLabel" text="PlayerName: Life"/>
                        <Label fx:id="levelLabel" text="Level"/>
                        <Label fx:id="scoreLabel" text="Score: 0"/>
                        <Label fx:id="recordLabel" text="Record: 0"/>
                        <Button fx:id="backButton" text="End game"/>
                    </VBox>
                </GridPane>
            </GridPane>

    </center>
</fx:root>

