<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.Double?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<fx:root type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         stylesheets="@../styles/MainStyle.css, @../styles/DialogStyle.css" >

    <fx:define>
        <Double fx:id="labelWidth" fx:value="290" />
        <Double fx:id="controlWidth" fx:value="120" />
    </fx:define>
    
        <center>
            <VBox id="mainContainer" alignment="CENTER" spacing="30">
                <VBox spacing="15">
                    <HBox alignment="CENTER" spacing="10">
                        <ImageView fx:id="pasiniAvatar" layoutX="29.0" layoutY="44.0" fitHeight="120.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/avatars/chiana.png"/>
                        </ImageView>
                        <Label fx:id="pasini" text="Giacomo Pasini - giacomo.pasini5@studio.unibo.it" minWidth="$labelWidth" maxWidth="$labelWidth" prefWidth="$labelWidth"/>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <Label fx:id="gibertoni" text="Giada Gibertoni - giada.gibertoni@studio.unibo.it" minWidth="$labelWidth" maxWidth="$labelWidth" prefWidth="$labelWidth"/>
                        <ImageView fx:id="gibertoniAvatar" layoutX="29.0" layoutY="44.0" fitHeight="120.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/avatars/giada.png"/>
                        </ImageView>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <ImageView fx:id="galassiAvatar" layoutX="29.0" layoutY="44.0" fitHeight="120.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/avatars/chiana.png"/>
                        </ImageView>
                        <Label fx:id="galassi" text="Meshua Galassi - meshua.galassi@studio.unibo.it" minWidth="$labelWidth" maxWidth="$labelWidth" prefWidth="$labelWidth"/>
                    </HBox>

                    <HBox alignment="CENTER" spacing="10">
                        <Label fx:id="chiana" text="Lorenzo Chiana - lorenzo.chiana@studio.unibo.it" minWidth="$labelWidth" maxWidth="$labelWidth" prefWidth="$labelWidth"/>
                        <ImageView fx:id="chianaAvatar" layoutX="29.0" layoutY="44.0" fitHeight="120.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../images/avatars/chiana.png"/>
                        </ImageView>
                    </HBox>
                </VBox>

                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="backButton" text="Back"/>
                </HBox>
            </VBox>
        </center>
</fx:root>
